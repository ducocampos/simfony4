{% extends "base.html.twig" %}

{% block title %}
    Listagem de livros
{% endblock %}

{% block body %}
    <br/>
    <div class="container-fluid px-md-5">
        <div class="row justify-content-center">
            <div class="modal fade" id="modalLivrosInserir" tabindex="-1" role="dialog" aria-labelledby="modal-inserir" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modal-inserir">Adicionar livro</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="{{ path('livros_inserir') }}" method="POST" name="inserir">
                                <div class="form-group">
                                    <label for="inputTitulo">Título:</label>
                                    <input type="text" class="form-control" id="inputTitulo" placeholder="Título do livro" name="titulo">
                                </div>
                                <div class="form-group">
                                    <label for="selectAutores">Selecione o autor</label>
                                    <select class="form-control" id="selectAutores" name="autor">
                                    <option value="">Selecione</option>
                                    {% for autor in autores %}
                                        <option value="{{ autor.id }}">{{ autor.autor }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="selectEditora">Selecione a editora</label>
                                    <select class="form-control" id="selectEditora" name="editora">
                                        <option value="">Selecione</option>
                                    {% for editor in editoras %}
                                        <option value="{{ editor.id }}">{{ editor.editora }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="selectCategoria">Selecione a categoria</label>
                                    <select class="form-control" id="selectCategoria" name="categoria">
                                        <option value="">Selecione</option>
                                      {% for categoria in categorias %}
                                        <option value="{{ categoria.id }}">{{ categoria.categoria }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="selectAnoPublicacao">Selecione o ano de publicação da edição</label>
                                    <select class="form-control" id="selectAnoPublicacao" name="anoEdicao">
                                        <option value="">Selecione</option>
                                    {% for ano in anos %}
                                        <option value="{{ ano.id }}">{{ ano.anoPublicacao }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <label for="campoEdicao">Número da edição</label>
                                        <input type="text" class="form-control" id="campoEdicao" placeholder="Núm. edição" name="edicao">
                                    </div>
                                    <div class="col">
                                        <label for="campoPaginas">Quantidade de páginas</label>
                                        <input type="text" class="form-control" id="campoPaginas" placeholder="Quant. páginas" name="paginas">
                                    </div>
                                </div>
                                <br/>
                            <button type="submit" class="btn btn-primary mb-2 mr-sm-2">Salvar</button>
                            <button type="button" class="btn btn-secondary mb-2 mr-sm-2" data-dismiss="modal">Cancelar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        {% if is_granted("ROLE_ADMIN") %}
        
            <button type="button" class="btn btn-primary mb-4 mr-sm-4" data-toggle="modal" data-target="#modalLivrosInserir">
                Adicionar livro
            </button>

        {% endif %}

            <div class="modal fade" id="modalLivrosEditar" tabindex="-1" role="dialog" aria-labelledby="modalLivrosEditarLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLivrosEditarLabel">Edição de editoras</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                            <form action="{{ path('livros_editar') }}" method="POST" name="editar">
                                <div class="form-group">
                                    <label for="inputTitulo">Título:</label>
                                    <input type="text" class="form-control" id="inputTitulo" placeholder="Título do livro" name="titulo">
                                </div>
                                <div class="form-group">
                                    <label for="selectAutores">Selecione o autor</label>
                                    <select class="form-control" id="selectAutores" name="autor">
                                    <option value="">Selecione</option>
                                    {% for autor in autores %}
                                        <option value="{{ autor.id }}">{{ autor.autor }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="selectEditora">Selecione a editora</label>
                                    <select class="form-control" id="selectEditora" name="editora">
                                        <option value="">Selecione</option>
                                    {% for editor in editoras %}
                                        <option value="{{ editor.id }}">{{ editor.editora }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="selectCategoria">Selecione a categoria</label>
                                    <select class="form-control" id="selectCategoria" name="categoria">
                                        <option value="">Selecione</option>
                                      {% for categoria in categorias %}
                                        <option value="{{ categoria.id }}">{{ categoria.categoria }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="selectAnoPublicacao">Selecione o ano de publicação da edição</label>
                                    <select class="form-control" id="selectAnoPublicacao" name="anoEdicao">
                                        <option value="">Selecione</option>
                                    {% for ano in anos %}
                                        <option value="{{ ano.id }}">{{ ano.anoPublicacao }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <label for="campoEdicao">Número da edição</label>
                                        <input type="text" class="form-control" id="campoEdicao" placeholder="Núm. edição" name="edicao">
                                    </div>
                                    <div class="col">
                                        <label for="campoPaginas">Quantidade de páginas</label>
                                        <input type="text" class="form-control" id="campoPaginas" placeholder="Quant. páginas" name="paginas">
                                    </div>
                                </div>
                                <br/>
                                <input type="hidden" class="form-control" id="recipient-id" name="id">
                            <button type="submit" class="btn btn-primary mb-2 mr-sm-2">Salvar</button>
                            <button type="button" class="btn btn-secondary mb-2 mr-sm-2" data-dismiss="modal">Cancelar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>           

            <table class="table table-bordered table-hover table-sm" id="example">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col" class="text-center">Título</th>
                        <th scope="col" class="text-center">Autor</th>
                        <th scope="col" class="text-center">Editora</th>
                        <th scope="col" class="text-center">Edição</th>
                        <th scope="col" class="text-center">Páginas</th>
                        <th scope="col" class="text-center">Categoria</th>
                        <th scope="col" class="text-center">Ano Publicação</th>
                    {% if is_granted("ROLE_ADMIN") %}
                        
                        <th scope="col" class="text-center">Editar</th>
                        <th scope="col" class="text-center">Excluir</th>

                    {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for livro in livros %}
                        <tr>
                            <th class="align-middle">{{ livro.id }}</th>
                            <td class="align-middle">{{ livro.titulo }}</td>
                            <td class="align-middle">{{ livro.autor }}</td>
                            <td class="align-middle">{{ livro.editora }}</td>
                            <td class="align-middle">{{ livro.edicao }}</td>
                            <td class="align-middle">{{ livro.paginas }}</td>
                            <td class="align-middle">{{ livro.categoria }}</td>
                            <td class="align-middle">{{ livro.anoPublicacao }}</td>
                        {% if is_granted("ROLE_ADMIN") %}

                            <td class="text-center">
                                <a href="#modalLivrosEditar" data-toggle="modal" data-titulo="{{ livro.titulo }}" data-id="{{ livro.id }}" data-autor="{{ livro.autor }}" data-autorid="{{ livro.autoresId }}" data-editora="{{ livro.editora }}" data-editoraid="{{ livro.editorasId }}" data-edicao="{{ livro.edicao }}" data-paginas="{{ livro.paginas }}" data-categoria="{{ livro.categoria }}" data-categoriaid="{{ livro.categoriasId }}" data-ano="{{ livro.anoPublicacao }}" data-anoid="{{ livro.publicacoesId }}">
                                    <span class="fas fa-pencil-alt"></span>
                                </a>
                            </td>
                            <td class="text-center"><a href="{{ path('livros_deletar', { id:livro.id }) }}" onclick="confirmar_exclusao_livro();"><span class="fas fa-trash-alt"></span></a></td>

                        {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <br/><br/>
        {% if is_granted("ROLE_ADMIN") %}
        
            <script>
                var teste = "granted";
            </script>
            
        {% endif %}
        
    {% endblock %}