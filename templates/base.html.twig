<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="/bootstrap-4.1.3-dist/css/bootstrap.min.css">
            <link rel="stylesheet" href="/fontawesome-free-5.5.0-web/css/all.css">
            <link rel="stylesheet" href="/DataTables/datatables.min.css">
        {% endblock %}

        <style>
            footer {
                background-color: navy;
                color: white;
                padding: 5px;
                font-size: 16px;
            }
            
        </style>
    </head>
    <body>
        {% block header %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href={{ path('raiz') }}>SISTEMA LIVROS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Alterna navegação">
                  <span class="navbar-toggler-icon"></span>
                </button>
              
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                  <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                  
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('livros_raiz') }}>Livros</a>
                        </li>


                    {% if is_granted("ROLE_ADMIN") %}
                    
                        <li class="nav-item">
                        <a class="nav-link" href={{ path('autores_raiz') }}>Autores</a>
                        </li>

                    {% endif %}

                    {% if is_granted("ROLE_ADMIN") %}

                        <li class="nav-item">
                            <a class="nav-link" href={{ path('editoras_raiz') }}>Editoras</a>
                        </li>

                    {% endif %}

                    {% if is_granted("ROLE_ADMIN") %}

                        <li class="nav-item">
                            <a class="nav-link" href={{ path('categorias_raiz') }}>Categorias</a>
                        </li>

                    {% endif %}

                    {% if is_granted("ROLE_ADMIN") %}

                        <li class="nav-item">
                            <a class="nav-link" href={{ path('ano_edicoes_raiz') }}>Anos das edições</a>
                        </li>

                    {% endif %}
                  </ul>
                  <ul class="navbar-nav navbar-right mt-2 mt-lg-0">

                    {% if is_granted("ROLE_USER") %}
                        <li class="nav-item">
                            <a class="nav-link" href="#"> Olá {{ app.user.nome }}!</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('logout') }}><span class="fas fa-sign-out-alt"></span> Logout</a>
                        </li>
                    {% else %}
                         
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('login') }}><span class="fas fa-sign-in-alt"></span> Login</a>
                        </li>
                    {% endif %}
                  </ul>
                </div>
              </nav>
        {% endblock %}

        {% block body %}{% endblock %}

    
        {% block footer %}
            <footer class="text-center fixed-bottom">Sistema desenvolvido por Eduardo Costa Campos</footer>
        {% endblock %}

        {% block javascripts %}
            <script src="/jquery-3.3.1/jquery-3.3.1.min.js"></script>
            <script src="/bootstrap-4.1.3-dist/js/bootstrap.min.js" ></script>
            <script src="/DataTables/datatables.min.js" ></script>
            <script src="/js/anoEdicoes.js"></script>
        {% endblock %}
    </body>
</html>
