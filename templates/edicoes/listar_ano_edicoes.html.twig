{% extends "base.html.twig" %}

{% block title %}
    Listagem dos anos de edições
{% endblock %}

{% block body %}
    <br/>
    <div class="container">
        <div class="row justify-content-sm-center">
            <div class="modal fade" id="modalExemplo-inserir" tabindex="-1" role="dialog" aria-labelledby="modal-inserir" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modal-inserir">Adicionar Ano de Publicação da Edição</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form class="form-inline" action="{{ path('ano_edicoes_inserir') }}" method="POST" name="inserir">
                            <label class="sr-only" for="formAnoEdicoes">Nome</label>
                            <input type="text" class="form-control mb-2 mr-sm-2" id="formAnoEdicoes" placeholder="Inserir o novo ano" name="ano">
                            <button type="submit" class="btn btn-primary mb-2 mr-sm-2">Adicionar</button>
                            <button type="button" class="btn btn-secondary mb-2 mr-sm-2" data-dismiss="modal">Fechar</button>
                        </form>
                    </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-primary mb-4 mr-sm-4" data-toggle="modal" data-target="#modalExemplo-inserir">
                Adicionar Ano de Publicação da Edição
            </button>

            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edição do ano de publicação das edições</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="{{ path('ano_edicoes_editar') }}" method="POST" name="editar">
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Ano:</label>
                            <input type="text" class="form-control mb-2 mr-sm-2" id="recipient-name" name="ano">
                            <input type="hidden" class="form-control" id="recipient-id" name="id">
                            <button type="submit" class="btn btn-primary mb-2 mr-sm-2">Enviar</button>
                            <button type="button" class="btn btn-secondary mb-2 mr-sm-2" data-dismiss="modal">Fechar</button>
                        </div>
                    </form>
                </div>
                </div>
            </div>
            </div>

            <table class="table table-bordered table-hover table-sm">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Ano Edição</th>
                        <th scope="col" colspan="2" class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ano in anos %}
                        <tr>
                            <th>{{ ano.id }}</th>
                            <td>{{ ano.anoPublicacao }}</td>
                            <td class="text-center"><a href="#exampleModal" data-toggle="modal" data-ano="{{ ano.anoPublicacao }}" data-id="{{ ano.id }}"><span class="fas fa-pencil-alt"></span></a></td>
                            <td class="text-center"><a href="{{ path('ano_edicoes_deletar', { id:ano.id }) }}" onclick="confirmar_exclusao();"><span class="fas fa-trash-alt"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <br/><br/>

        <script>
            $('#exampleModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget) // Botão que acionou o modal
                var ano = button.data('ano') // Extrai informação dos atributos data-*
                var id = button.data('id')
                // Se necessário, você pode iniciar uma requisição AJAX aqui e, então, fazer a atualização em um callback.
                // Atualiza o conteúdo do modal. Nós vamos usar jQuery, aqui. No entanto, você poderia usar uma biblioteca de data binding ou outros métodos.
                var modal = $(this)
                modal.find('.modal-body #recipient-name').val(ano)
                modal.find('.modal-body #recipient-id').val(id)
            })        
        
            function confirmar_exclusao() {
                if (confirm('Deseja realmente deletar esse ano?')) {
                    return  true;
                }
            }
        </script>

    {% endblock %}